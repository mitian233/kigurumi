---
import Layout from "../../layouts/Layout.astro";
const { slug } = Astro.params;
import {idCharaMap} from "../../data/charalist";
import WipBanner from "../../components/wipBanner.astro";
const findChara = (slug: string) => idCharaMap.findIndex((chara) => chara.strid === slug);
const chara = idCharaMap[findChara(slug)];
export async function getStaticPaths() {
    return idCharaMap.map((chara) => ({
        params: {slug: chara.strid},
        // props:
        })
    );
}
---

<Layout title={`キャラクター ${chara.name}`}>
    <div class="w-full h-[60svh] flex flex-col justify-center items-center">
        <h1 class="text-5xl">{chara.name}</h1>
        <h2 class="text-3xl">{chara.name_en}</h2>
    </div>
    <div class="w-full min-h-[40svh] p-10 border-t-2 rounded-t-xl bg-white bg-opacity-50 backdrop-blur-sm">
        <h1 class="text-3xl">着ぐるみさんたち</h1>
        <h2 class="text-xl">
            Kigurumi player(s) of {chara.name_en}
        </h2>
        <div class="mt-3">
            <p>WIP...</p>
        </div>
    </div>
</Layout>
