---
import Layout from "../../layouts/Layout.astro";
const { slug } = Astro.params;
import {idCharaMap} from "../../data/charalist";
const findChara = (slug: string) => idCharaMap.findIndex((chara) => chara.strid === slug);
const chara = idCharaMap[findChara(slug)];
export async function getStaticPaths() {
    return idCharaMap.map((chara) => ({
        params: {slug: chara.strid},
        // props:
        })
    );
}
---

<Layout title={`キャラクター ${chara.name}`}>
    <div class="relative w-full h-[80svh] overflow-hidden">
        <div class="absolute w-full md:w-1/2 h-[80svh] right-0">
            <img src={chara.image} alt={chara.name} class="object-cover w-full h-full opacity-75" />
        </div>
        <div class="absolute w-full h-[80svh] flex flex-col justify-center items-center">
            <h1 class="text-5xl">{chara.name}</h1>
            <h2 class="text-3xl">{chara.name_en}</h2>
        </div>
    </div>
    <div class="w-full min-h-[20svh] px-5 md:px-10">
        <div class="w-full h-fit p-5 md:p-10 border-t-2 border-x rounded-t-xl bg-white bg-opacity-50 backdrop-blur-sm">
            <h1 class="text-xl md:text-3xl">着ぐるみさんたち</h1>
            <h2 class="md:text-xl">
                Kigurumi player(s) of {chara.name_en}
            </h2>
            <div class="mt-3">
                <p>WIP...</p>
            </div>
        </div>
    </div>
</Layout>
